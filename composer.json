{
  "name":         "tflori/riki-community",
  "description":  "",
  "type":         "project",
  "license":      "proprietary",
  "config":       {
    "bin-dir": "bin"
  },
  "require":      {
    "erusev/parsedown":                  "^1.7",
    "ext-bcmath":                        "*",
    "ext-json":                          "*",
    "ext-mbstring":                      "*",
    "ext-pdo":                           "*",
    "ext-redis":                         "*",
    "filp/whoops":                       "^2.2",
    "monolog/monolog":                   "^1.9",
    "nesbot/carbon":                     "^2.16",
    "nette/mail":                        "^2.4",
    "nikic/fast-route":                  "^1.3.0",
    "php":                               "^7.1",
    "psr/http-server-handler":           "^1.0.0",
    "psr/http-server-middleware":        "^1.0.0",
    "psr/simple-cache":                  "^1.0",
    "psy/psysh":                         "^0.9.9",
    "symfony/cache":                     "^4.3",
    "tflori/dependency-injector":        "2.2.0-beta.1",
    "tflori/breyta":                     "1.0.0-rc.3",
    "tflori/hugga":                      "1.0.0",
    "tflori/nb-sessions":                "^1.1",
    "tflori/orm":                        "1.8.0-rc.2",
    "tflori/riki-framework":             "1.0.0-rc.3",
    "tflori/secure-token":               "^1.0",
    "tflori/syna":                       "1.0.0-rc.1",
    "tflori/tal":                        "^1.0.1",
    "tflori/verja":                      "^1.1",
    "tijsverkoyen/css-to-inline-styles": "^2.2",
    "ulrichsg/getopt-php":               "^3.2",
    "guzzlehttp/guzzle":                 "^6.4"
  },
  "suggest":      {
    "ext-pcntl": "*",
    "ext-posix": "*"
  },
  "autoload":     {
    "psr-4": {
      "App\\":       "app",
      "Community\\": "src"
    }
  },
  "require-dev":  {
    "phpunit/phpunit":           "^7.2",
    "mockery/mockery":           "^1.1",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests"
    }
  },
  "scripts":      {
    "code-style": [
      "phpcs --standard=PSR2 --colors app",
      "phpcs --standard=PSR2 --colors src",
      "phpcs --standard=PSR2 --ignore=example --extensions=php --colors tests"
    ],
    "start":      "docker-compose up -d",
    "cli":        "docker-compose exec -T php community",
    "test":       "docker-compose exec -T php phpunit",
    "stop":       "docker-compose stop",
    "debug-cli":  "docker-compose exec -T php debug bin/community",
    "debug-test": "docker-compose exec -T php debug bin/phpunit"
  }
}
