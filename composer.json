{
    "name": "tflori/riki-community",
    "description": "",
    "type": "project",
    "license": "proprietary",
    "config": {
        "bin-dir": "bin"
    },
    "require": {
        "php": "^7.1",
        "ext-mbstring": "*",
        "tflori/riki-framework": "1.0.0-rc.1",
        "filp/whoops": "^2.2",
        "monolog/monolog": "^1.9",
        "ulrichsg/getopt-php": "^3.2",
        "tflori/hugga": "1.0.0-rc.1",
        "tflori/tal": "^1.0.1",
        "nikic/fast-route": "^1.3.0",
        "psr/http-server-handler": "^1.0.0",
        "psr/http-server-middleware": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Community\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "mockery/mockery": "^1.1",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests"
        }
    },
    "scripts": {
        "code-style": [
            "phpcs --standard=PSR2 app",
            "phpcs --standard=PSR2 src",
            "phpcs --standard=PSR2 --ignore=example tests"
        ],
        "start": "docker-compose up -d",
        "cli": "docker-compose exec -T php community",
        "test": "docker-compose exec -T php phpunit",
        "stop": "docker-compose stop",
        "debug-cli": "docker-compose exec -T php debug bin/community",
        "debug-test": "docker-compose exec -T php debug bin/phpunit"
    }
}
