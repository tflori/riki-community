{
  "name": "riki-community",
  "author": "Thomas Flori",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "jquery": "^3.4.1",
    "materialize-css": "^1.0.0",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "@types/jquery": "^3.3.30",
    "@types/materialize-css": "^1.0.6",
    "@types/moxios": "^0.4.8",
    "@types/node": "^12.6.8",
    "@vue/test-utils": "^1.0.0-beta.29",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.5.0",
    "moxios": "^0.4.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.1.0",
    "ts-jest": "^24.0.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.5.3",
    "vue-class-component": "^6.3.2",
    "vue-jest": "^3.0.4",
    "vue-resource": "^1.5.1",
    "vue-template-compiler": "^2.6.10",
    "vue-template-loader": "^1.0.0",
    "vue-template-loader-jest": "^0.1.0",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6"
  },
  "scripts": {
    "build": "webpack",
    "watch": "webpack --watch",
    "test": "jest --coverage",
    "coveralls": "cat tests/coverage/lcov.info | coveralls"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "html"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.html?$": "vue-template-loader-jest"
    },
    "testURL": "http://localhost/",
    "testRegex": "/tests/js/.*\\.spec\\.ts$",
    "moduleNameMapper": {
      "@view/(.*)": "<rootDir>/resources/views/components/$1",
      "@src/(.*)": "<rootDir>/js/$1"
    },
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageDirectory": "tests/coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  }
}
